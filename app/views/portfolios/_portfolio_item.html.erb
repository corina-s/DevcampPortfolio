<div class="col-md-4">
    <div class="card mb-4 box-shadow" data-id="<%= portfolio_item.id %>">
<!-- when added carrierwave gem for image uploading had to add .url after portfolio_item.thumb_image because it was errorring out -->
        <%= image_tag portfolio_img(portfolio_item.thumb_image.url, 'thumb'), class: "card-img-top" %>
        <div class="card-body">
            <p class="card-text">
                <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %>
                </span><%= portfolio_item.subtitle  %>
            </p>

        </div>
    </div>
</div>

